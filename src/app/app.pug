div
	.container(class="table-responsive")
		h1 {{title}}
		h2 English {{table.leagueCaption}}

		table(class="table table-hover table-bordered") 
			tr 
				th Rank
				th Team
				th Played
				th Points
				th GF
				th GA
				th GD
			tr(*ngFor="let stand of table.standing; let i = index;")
				td {{i+1}}
				td 
					img(src="{{stand.crestURI}}")
				td {{stand.playedGames}}
				td {{stand.points}}
				td {{stand.goals}}
				td {{stand.goalsAgainst}}
				td {{stand.goalDifference}}
